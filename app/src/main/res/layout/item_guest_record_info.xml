<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:id="@+id/rel_bg"
    android:layout_marginBottom="15dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/guest_record_list_item_bg">

    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_race_date"
            tools:text="2022.11.21 10:05"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_left_country"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/tv_race_date"
            tools:text="德国"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_race"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/tv_race_date"
            android:layout_toRightOf="@+id/tv_left_country"
            android:text="  VS  "
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_right_country"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/tv_race_date"
            android:layout_toRightOf="@+id/tv_race"
            tools:text="乌拉圭"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_race_result"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="未出结果"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/tv_country_winner"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="德国胜"
        android:layout_centerVertical="true"
        android:layout_marginRight="120dp"
        android:layout_toLeftOf="@+id/tv_race_result"/>

</RelativeLayout>